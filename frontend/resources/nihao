  // 鼠标滚轮滚动，头部导航栏的隐藏和显示
  let last = 0
  const scrollFunc = throttle((e) => {
    const current = document.documentElement.scrollTop
    if (current < 600) {
      // 画面在上方
      store.commit('STICKHEAD', true)
    } else {
        if (last - current > 0) {
        // 向上滚动
        store.commit('STICKHEAD', true)
      } else {
        // 向下滚动
        store.commit('STICKHEAD', false)
      }
    }
    last = current
  }, 1000)

  // 鼠标点击屏幕，侧边栏隐藏或显示
  let sideNav
  let header
  onMounted(() => {
    sideNav = document.querySelector('#sideNav')
    header = document.querySelector('#header')
  })